  year     = "2023",
  note     = sprintf("R package version %s", meta$Version),
  url      = "https://ready4-dev.github.io/bimp/",
  textVersion = paste("Matthew Hamilton <matthew.hamilton1@monash.edu> [aut and cre] (<https://orcid.org/0000-0001-7407-9194>) ",
  "(2023).",
  paste0(meta$Package,": ",meta$Title,
  "."),
  paste0(sprintf("Version %s", meta$Version),"."),
  paste0("https://doi.org/",
"10.5281/zenodo.5889462")
  )
)
